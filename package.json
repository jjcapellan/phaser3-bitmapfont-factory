{
  "name": "phaser3-bitmapfont-factory",
  "version": "1.0.0",
  "description": "Creates bitmapfonts in Phaser3 at runtime, using available browser fonts",
  "main": "dist/bmff.js",
  "umd:main": "dist/bmff.umd.js",
  "module": "dist/bmff.ems.js",
  "source": "src/bmff.ts",
  "types": "dist/bmff.d.ts",
  "scripts": {
    "build:dev": "microbundle -f umd --name BMFFactory -o devbuild --no-generateTypes",
    "build:dist": "microbundle -f cjs,umd,es --name BMFFactory --sourcemap false && npm run copytypes",
    "copytypes": "cpy 'dist/bmff.d.ts' . --rename='bmff.ems.d.ts' && cpy 'dist/bmff.d.ts' . --rename='bmff.umd.d.ts'",
    "dev": "microbundle watch -f umd --name BMFFactory"
  },
  "keywords": [
    "Phaser3",
    "bitmapFont",
    "font",
    "text",
    "runtime",
    "converter"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jjcapellan/phaser3-bitmapfont-factory"
  },
  "author": "Juan Jose Capellan",
  "license": "MIT",
  "devDependencies": {
    "cpy-cli": "^4.1.0",
    "microbundle": "^0.14.2",
    "phaser": "^3.55.2"
  }
}